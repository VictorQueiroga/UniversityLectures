@model UniversityLectures.Models.ViewModels.LectureFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h4>Lecture</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="lecture.Title" class="control-label"></label>
                <input asp-for="lecture.Title" class="form-control" />
                <span asp-validation-for="lecture.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lecture.Price" class="control-label"></label>
                <input asp-for="lecture.Price" class="form-control" />
                <span asp-validation-for="lecture.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lecture.Date" class="control-label"></label>
                <input asp-for="lecture.Date" class="form-control" />
                <span asp-validation-for="lecture.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lecture.Status" class="control-label"></label>
                <select asp-for="lecture.Status">
                    <option value="0">Waiting</option>
                    <option value="1">Presented</option>
                    <option value="2">Canceled</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="lecture.Professor" class="control-label"></label>
                <select asp-for="lecture.ProfessorId" asp-items="@(new SelectList(Model.Professors,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
