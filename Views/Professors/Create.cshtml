@model UniversityLectures.Models.ViewModels.ProfessorFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h4>Professor</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="professor.Name" class="control-label"></label>
                <input asp-for="professor.Name" class="form-control" />
                <span asp-validation-for="professor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="professor.Email" class="control-label"></label>
                <input asp-for="professor.Email" class="form-control" />
                <span asp-validation-for="professor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="professor.Birthdate" class="control-label"></label>
                <input asp-for="professor.Birthdate" class="form-control" />
                <span asp-validation-for="professor.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="professor.Department" class="control-label"></label>
                <select asp-for="professor.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
